@model Book

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Book</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="col-10">
                <div class="p-3">
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Title" disabled class="form-control border shadow" />
                        <label asp-for="Title" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Author" disabled class="form-control border shadow" />
                        <label asp-for="Author" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="PublicationYear" disabled class="form-control border shadow" />
                        <label asp-for="PublicationYear" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="ISBN" disabled class="form-control border shadow" />
                        <label asp-for="ISBN" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Genre" disabled class="form-control border shadow" />
                        <label asp-for="Genre" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Publisher" disabled class="form-control border shadow" />
                        <label asp-for="Publisher" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="PageCount" disabled class="form-control border shadow" />
                        <label asp-for="PageCount" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Language" disabled class="form-control border shadow" />
                        <label asp-for="Language" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="Summary" disabled class="form-control border shadow" />
                        <label asp-for="Summary" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-1 col-12">
                        <input asp-for="AvailableCopies" disabled class="form-control border shadow" />
                        <label asp-for="AvailableCopies" class="ms-2"></label>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Book" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            @* <div class="col-2">
                <img src="@Model.ImageUrl" width="100"
                     style="border-radius:5px; border:1px solid #bbb9b9" />
            </div> *@
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}